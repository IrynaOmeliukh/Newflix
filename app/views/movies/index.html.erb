<div class="w-full bg-gray-100 p-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center pb-4">
    <h1 class="font-bold text-4xl">Popular Movies</h1>
    <%= link_to 'favorites', favorites_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"%>

    <%= link_to 'New movie', new_movie_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"%>
  </div>

  <div id="movies" class="flex flex-wrap justify-between">
    <% @movie_decorator.collection.each do |movie| %>
      <%= render 'movies/movie', movie: movie %>
    <% end %>
  </div>
</div>
