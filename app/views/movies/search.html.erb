<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Search</h1>
  </div>

  <div id="search_movies" class="flex flex-wrap justify-between">
    <%# <%= render 'movies/movie', movies@search_movies %>
    <% @search_movies.each do |movie| %>
      <%= render 'movies/movie', movie: movie %>
    <% end %>
  </div>
</div>
