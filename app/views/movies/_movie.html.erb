<div id="<%= dom_id movie %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= movie.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= movie.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Poster path:</strong>
    <%= movie.poster_path %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Genres:</strong>
    <%= movie.genres %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Release date:</strong>
    <%= movie.release_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Popularity:</strong>
    <%= movie.popularity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vote avg:</strong>
    <%= movie.vote_avg %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vote count:</strong>
    <%= movie.vote_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this movie", movie, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this movie', edit_movie_path(movie), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
