<div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden shadow-lg p-6">
  <h2 class="text-2xl font-bold mb-6"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium"  %>
    </div>

    <div class="mb-4">
      <%= f.label :nickname, class: "block text-gray-700 font-bold mb-2" %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "w-full px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium"  %>
    </div>

    <div class=" mb-4">
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('.minimum') %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" %>
    </div>

    <div class=" mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-bold mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" %>
    </div>

    <div class="flex justify-center ">
      <%= f.submit t('.sign_up'), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
