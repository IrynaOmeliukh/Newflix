<% if following?(user) %>
<%= button_to t('.unfollow'), unfollow_path(id: user.id), method: :delete, form: { id: dom_id(user, :button) }, class: "text-white py-2 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5"%>
<% else %>
<%= button_to t('.follow'), follow_path(id: user.id), method: :post, form: { id: dom_id(user, :button) }, class: "text-white py-2 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5" %>
<% end %>
