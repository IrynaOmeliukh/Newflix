<div class="w-full bg-gray-100 p-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

<div class="flex justify-between">
  <h1 class="font-bold text-4xl">Favorite Movies</h1>
  <%= link_to 'Get pdf', render_pdf_path, class:'rounded-lg py-3 px-5 bg-white inline-block font-medium text-gray-600 hover:bg-gray-200'%>
</div>


<% if @favorites.present? %>
  <div id="movies" class="flex flex-wrap justify-between">
   <% @favorites.each do |movie| %>
    <%= render 'movies/movie', movie: movie %>
  <% end %>
  </div>
<% end %>
